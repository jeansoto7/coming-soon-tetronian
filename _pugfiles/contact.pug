.contact.sliced-content

  .nav-bar-box
    .tetronian-logotype
      img(src="{{site.baseurl}}/assets/img/logos/tetronian-logotype-white.svg", title="Tetronian", alt="Tetronian").logotype
    nav.site-nav
      a(href="{{site.baseurl}}/").menu-item 
        span.menu-item-name Home
      a(href="{{site.baseurl}}/404").menu-item  
        span.menu-item-name Shop
      a(href="{{site.baseurl}}/contact").menu-item  
        span.menu-item-name.activated Contact
  
  .contact-box
    .outer-text
      h1.glitch Get in touch
      h1.glitch.glitchIn.glitchOut.outer-text-orange Get in touch
    
    .form-fill-out
      #mc_form
        form(method='POST', action='https://formspree.io/tetronians@gmail.com')
          .form-display
            .mc-field-group.group-name
              input(type='text', name='name')
              label#typewriter Your Name... 
            .mc-field-group.group-subject
              input(type='text', name='subject')
              label#typewriter Your Subject... 
            .mc-field-group.group-email
              input(type='email', name='_replyto')
              label#typewriter Your Email... 
            .mc-field-group.group-message
              input(type='text', name='message')
              label#typewriter Your Message... 
            //- .mc-field-group.group-message
            //-   textarea(name='Text1', cols='40', rows='5')
            //-   label Your Message... 
            .group-submit
              button.button#button-slide(type='submit', value='Submit')
                span(data-letters='Submit') Submit
            
            //- a({{site.baseurl}}href="{{site.baseurl}}/")
            //-   button.button
            
            
          
  .copyright-box
    .copyright
      p &copy; 2019 Tetronian
    
  .penrose-background(style="background-image: url({{site.baseurl}}/assets/img/backgrounds/penrose-fullgradient-background.svg)")
    
